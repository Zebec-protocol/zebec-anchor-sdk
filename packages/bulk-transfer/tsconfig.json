{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6", "dom", "dom.iterable", "esnext"],
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": false,
      "allowJs": true,
      "outDir": "dist/esm",
      "moduleResolution": "Node",
      "declaration": true,
      "declarationDir": "dist/types",
      "strict": false,
      "esModuleInterop": true,
      "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.js"]
}
